@inject HttpClient _httpClient
@inject ISnackbar _snackbar

<MudDialog>
    <DialogContent>
        ¿Esta seguro de eliminar @ProductionId?
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">No</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Delete">Si</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] 
    MudDialogInstance MudDialog { get; set; }
    
    [Parameter]
    public string ProductionId { get; set; }

    void Cancel() => MudDialog.Cancel();

    private async Task Delete()
    {
        await _httpClient.DeleteAsync($"api/Production/{ProductionId}");
        MudDialog.Close(DialogResult.Ok(true));
        _snackbar.Add($"{ProductionId} Eliminado exitosamente", Severity.Success);
    }
}